%h1 Tiendas

%table
  %thead
    %tr
      %th Name
      %th Kind
      %th Statu
      %th url
      %th option
  %tbody
  - @stores.each do |store|
    - if store.neighbour?
      %tr
        %td
          = store.name
        %td
          = store.kind
        %td
          = store.statu
        %td
          = store.url
        %td
          = link_to 'Show', store_path(store)
          = link_to 'Edit', edit_store_path(store)
          = link_to 'Destroy', store_path(store), method: :delete, data: {confirm: 'Are you sure?'}

= link_to 'New store', new_store_path
= link_to 'Volver', store_path(@stores.first)